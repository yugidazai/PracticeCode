<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assessment.channelrating.ChannelRatingActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="@dimen/list_col_name_size"
            android:layout_height="match_parent"
            android:text="@string/title_name"
			style="@style/TitleTextViewStyle"/>
        <TextView
            android:id="@+id/title_start_time"
            android:layout_width="@dimen/list_col_start_time_size"
            android:layout_height="wrap_content"
            android:text="@string/title_start_time"
			style="@style/TitleTextViewStyle"/>
        <TextView
            android:id="@+id/title_end_time"
            android:layout_width="@dimen/list_col_end_time_size"
            android:layout_height="wrap_content"
            android:text="@string/title_end_time"
			style="@style/TitleTextViewStyle"/>
        <TextView
            android:id="@+id/title_channel"
            android:layout_width="@dimen/list_col_channel_size"
            android:layout_height="match_parent"
            android:text="@string/title_channel"
			style="@style/TitleTextViewStyle"/>
        <TextView
            android:id="@+id/title_rating"
            android:layout_width="@dimen/list_col_rating_size"
            android:layout_height="match_parent"
            android:text="@string/title_rating"
			style="@style/TitleTextViewStyle"/>
	</LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:background="@color/divider_color"
        android:layout_below="@id/title_layout"
        />
	<ListView 
	    android:id="@+id/program_list"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:scrollbars="vertical"
        android:smoothScrollbar="true"
        android:animationCache="false"
        android:scrollingCache="false"
        android:divider="@color/divider_color"
        android:dividerHeight="@dimen/list_divider_height">
	</ListView>
</RelativeLayout>
